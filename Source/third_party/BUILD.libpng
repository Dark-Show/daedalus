licenses(["notice"])

cc_library(
    name = "libpng",
    srcs = [
        "png.c",
        "pngerror.c",
        "pngget.c",
        "pngmem.c",
        "pngpread.c",
        "pngread.c",
        "pngrio.c",
        "pngrtran.c",
        "pngrutil.c",
        "pngset.c",
        "pngtrans.c",
        "pngwio.c",
        "pngwrite.c",
        "pngwtran.c",
        "pngwutil.c",
    ],
    hdrs = glob(["*.h"]) + [
        "pnglibconf.h",
    ],
    includes = ["."],
    visibility = ["//visibility:public"],
    deps = [
        "@zlib//:zlib",
    ],
)

genrule(
    name = "copy_pnglibconf",
    srcs = [":scripts/pnglibconf.h.prebuilt"],
    outs = ["pnglibconf.h"],
    cmd = "cp $(locations :scripts/pnglibconf.h.prebuilt) $@",
)
